<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>

            <!-- 配置边角 -->
            <corners 
                android:radius="4px" />
            
			
            <!-- 纯色 -->
            <solid 
                android:color="#d9d9d9"/>
        </shape>
    </item>
    <item
        android:bottom="1px"
        android:left="1px"
        android:right="1px"
        android:top="1px">
        <shape>

            <!-- 配置边角 -->
            <corners android:radius="4px" />

            <!-- 纯色 -->
            <solid android:color="#f2f2f2" />
        </shape>
    </item>

</layer-list>